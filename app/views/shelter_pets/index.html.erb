<%= link_to "All Pets", "/pets" %><%= link_to "All Shelters", "/shelters" %>
<% @pets.each do |pet| %>
  <h2><img src=<%= pet.image %> /></h2>
  <h2><%= link_to pet.name, "/pets/#{pet.id}" %></h2>
  <h2><%= pet.age %></h2>
  <h2><%= pet.sex %></h2>
  <h2><%= pet.description %></h2>
  <h2><%= pet.status %></h2>
  <h2><%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %></h2>
  <h2><%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %></h2>
<% end%>
<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
