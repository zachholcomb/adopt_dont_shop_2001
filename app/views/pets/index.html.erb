<%= link_to "All Pets", "/pets" %>

<h1>Pets</h1>

<% @pets.each do |pet| %>
  <img src=<%= pet.image %> />
  <h2><%= link_to pet.name, "/pets/#{pet.id}" %></h2>
  <h2><%= pet.age %></h2>
  <h2><%= pet.sex %></h2>
  <h2><%= link_to pet.shelter.name, "/shelters/#{pet.shelter.id}" %></h2>
  <h2><%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %></h2>
  <h2><%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %></h2>
<% end%>
