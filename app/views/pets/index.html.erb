<ul class="nav">
  <li><%= link_to "All Pets", "/pets" %></li>
  <li><%= link_to "All Shelters", "/shelters" %></li>
</ul>
<h1 class="title">Pets</h1>
<ul class="menu">
  <li><%= link_to "Adoptable Pets", "/pets?adoptable=true" %></li>
  <li><%= link_to "Pets Pending Adoption", "/pets?adoptable=false" %></li>
</ul>
<% @pets.each do |pet| %>
  <div class="gallery">
    <img src=<%= pet.image %> />
    <div class="desc">
      <p class="pet_link"><%= link_to pet.name, "/pets/#{pet.id}" %></p>
      <p><%= pet.age %></p>
      <p><%= pet.sex %></p>
      <p><%= link_to pet.shelter.name, "/shelters/#{pet.shelter.id}" %></p>
      <ul class="menu">
        <li><%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %></li>
        <li><%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %></li>
      </ul>
    </div>
  </div>
<% end%>
