<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
<p><%= label_tag :name, "Name:" %> <%= text_field_tag(:name, @pet.name) %></p>
<p><%= label_tag :age, "Age:" %> <%= text_field_tag(:age, @pet.age) %></p>
<p><%= label_tag :sex, "Sex:"%> <%= text_field_tag(:sex, @pet.sex) %></p>
<p><%= label_tag :description, "Description:"%> <%= text_field_tag(:description, @pet.description) %></p>
<p><%= label_tag :image, "Image:" %> <%= text_field_tag(:image, @pet.image) %></p>
<%= submit_tag 'Update Pet' %>
<% end %>
